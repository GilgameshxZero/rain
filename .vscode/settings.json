{
	"debug.console.closeOnEnd": false,

	"editor.rulers": [60, 80, 120],
	"editor.insertSpaces": false,
	"editor.tabSize": 2,

	"files.insertFinalNewline": true,
	"files.eol": "\n",
	"files.associations": {
		"*.vstemplate": "xml"
	},

	// Cannot be placed in `.clangd` since we need to reference absolute path ${workspaceFolder}.
	"clangd.fallbackFlags": ["-I${workspaceFolder}/include/", "-std=c++20"],

	"[cpp]": {
		"editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
		"editor.wordWrap": "on"
	}
}
